{
  "name": "postmessage",
  "version": "0.1.0",
  "description": "Two way iframe communication library",
  "author": "Nursultan Berkimbay",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "dev": "NODE_ENV=development webpack --watch --config webpack.config.js",
    "build": "npm run build:umd && npm run build:esm",
    "build:umd": "NODE_ENV=production webpack --config webpack.config.js",
    "build:esm": "rollup -c rollup.config.js",
    "test": "nyc --reporter=html --reporter=text ava -v",
    "watch": "nyc --reporter=html --reporter=text ava --watch -v",
    "flow": "flow",
    "coverage": "flow-coverage-report -i 'main.js' -i 'src/*.js' -t html --threshold 90",
    "precommit": "npm run test"
  },
  "dependencies": {
    "core-js": "2.5.6"
  },
  "devDependencies": {
    "ava": "0.20.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "browser-env": "3.2.5",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.8.2",
    "flow-bin": "0.73.0",
    "flow-coverage-report": "0.5.0",
    "flow-remove-types": "1.2.3",
    "husky": "0.14.3",
    "nyc": "11.8.0",
    "rollup": "0.59.4",
    "rollup-plugin-babel": "3.0.4",
    "uglifyjs-webpack-plugin": "1.2.5",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-merge": "4.1.2"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ]
  }
}
